{
    "name": "portal-documentos-contabeis",
    "version": "1.0.0",
    "description": "Portal SaaS de Gestão de Documentos Contábeis com OCR e LGPD",
    "private": true,
    "workspaces": [
        "backend",
        "frontend/admin",
        "frontend/client"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:admin\" \"npm run dev:client\"",
        "dev:backend": "cd backend && npm run dev",
        "dev:admin": "cd frontend/admin && npm run dev",
        "dev:client": "cd frontend/client && npm run dev",
        "build": "npm run build:backend && npm run build:admin && npm run build:client",
        "build:backend": "cd backend && npm run build",
        "build:admin": "cd frontend/admin && npm run build",
        "build:client": "cd frontend/client && npm run build",
        "test": "npm run test:backend && npm run test:frontend",
        "test:backend": "cd backend && npm test",
        "test:frontend": "cd frontend && npm test",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "prisma:migrate": "cd backend && npx prisma migrate dev",
        "prisma:studio": "cd backend && npx prisma studio"
    },
    "keywords": [
        "contabilidade",
        "documentos",
        "ocr",
        "lgpd",
        "saas"
    ],
    "author": "",
    "license": "PROPRIETARY",
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}